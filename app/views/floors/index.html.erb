<h1>Listing floors</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
      <th>Areas</th>
    </tr>
  </thead>

  <tbody>
    <% @floors.each do |floor| %>
      <tr>
        <td><%= floor.nombre %></td>
        <td><%= link_to 'Ver', floor %></td>
        <td><%= link_to 'Editar', edit_floor_path(floor) %></td>
        <td><%= link_to 'Eliminar', floor, method: :delete, data: { confirm: 'Estas Seguro?' } %></td>
        <td><%= link_to 'Ver Areas', floor_areas_path(floor) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Piso', new_floor_path %>
